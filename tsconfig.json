{
    "compilerOptions": {
      "outDir": "./build/",
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom"],
      "plugins": [
        {
          "name": "typescript-tslint-plugin"
        }
      ],
      "typeRoots" : [
        "./typings" // path to your typings directory (relative to tsconfig.json)
      ],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": false,
      "noImplicitAny": false,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "strictPropertyInitialization": false
    },
    "exclude": [
      "node_modules/**",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
    ]
  }
  